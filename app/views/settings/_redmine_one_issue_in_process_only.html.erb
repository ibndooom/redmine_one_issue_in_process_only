<p>
  <label><%= l(:in_process_status_id, scope: 'settings.redmine_one_issue_in_process_only') %></label>
  <%= select_tag(
      'settings[in_process_status_id]',
      options_for_select(
          IssueStatus.order(:position).pluck(:name, :id),
          IssueStatus.find_by(id: @settings['in_process_status_id']).try(:id)),
      include_blank: true) %>
</p>
<p>
  <label><%= l(:on_hold_status_id, scope: 'settings.redmine_one_issue_in_process_only') %></label>
  <%= select_tag(
      'settings[on_hold_status_id]',
      options_for_select(
          IssueStatus.order(:position).pluck(:name, :id),
          IssueStatus.find_by(id: @settings['on_hold_status_id']).try(:id)),
      include_blank: true) %>
</p>
<p>
  <label><%= l(:isnt_parent_issue_in_process, scope: 'settings.redmine_one_issue_in_process_only') %></label>
  <%= check_box_tag 'settings[isnt_parent_issue_in_process]', '1', @settings['isnt_parent_issue_in_process'] %>
</p>

